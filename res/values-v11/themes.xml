<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <item name="numberPickerStyle">@style/Widget.Holo.NumberPicker</item>
        <item name="menuIconHelp">@drawable/ic_menu_help_dark</item>
        <item name="menuIconRate">@drawable/ic_menu_rate_dark</item>
        <item name="menuIconEmail">@drawable/ic_menu_email_dark</item>
        <item name="iconGoToToday">@drawable/ic_go_to_today_dark</item>
        <item name="iconNextItem">@drawable/ic_next_item_dark</item>
        <item name="iconPrevItem">@drawable/ic_previous_item_dark</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <style name="AppBaseThemeLight" parent="android:Theme.Holo.Light">
        <item name="numberPickerStyle">@style/Widget.Holo.Light.NumberPicker</item>
        <item name="menuIconHelp">@drawable/ic_menu_help_light</item>
        <item name="menuIconRate">@drawable/ic_menu_rate_light</item>
        <item name="menuIconEmail">@drawable/ic_menu_email_light</item>
        <item name="iconGoToToday">@drawable/ic_go_to_today_light</item>
        <item name="iconNextItem">@drawable/ic_next_item_light</item>
        <item name="iconPrevItem">@drawable/ic_previous_item_light</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <style name="DialogBaseTheme" parent="android:Theme.Holo.Dialog">
        <item name="numberPickerStyle">@style/Widget.Holo.NumberPicker</item>
    </style>

    <style name="DialogBaseThemeLight" parent="android:Theme.Holo.Light.Dialog">
        <item name="numberPickerStyle">@style/Widget.Holo.Light.NumberPicker</item>
    </style>

</resources>