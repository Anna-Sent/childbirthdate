        <item name="iconPrevItem">@drawable/ic_previous_item_light</item>
        <item name="iconExpand">@drawable/ic_expand_light</item>
        <item name="iconCollapse">@drawable/ic_collapse_light</item>
        <item name="iconAdd">@drawable/ic_new_light</item>
        <item name="iconDelete">@drawable/ic_remove_content_light</item>
        <item name="iconEdit">@drawable/ic_edit_light</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <style name="DialogBaseTheme" parent="android:Theme.Holo.Dialog">
        <item name="numberPickerStyle">@style/Widget.Holo.NumberPicker</item>
    </style>

    <style name="DialogBaseThemeLight" parent="android:Theme.Holo.Light.Dialog">
        <item name="numberPickerStyle">@style/Widget.Holo.Light.NumberPicker</item>
    </style>

</resources>