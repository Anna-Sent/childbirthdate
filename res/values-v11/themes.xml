    <style name="AppBaseThemeLight" parent="android:Theme.Holo.Light">
        <item name="numberPickerStyle">@style/Widget.Holo.Light.NumberPicker</item>
        <item name="menuIconHelp">@drawable/ic_menu_help_light</item>
        <item name="menuIconSettings">@drawable/ic_menu_settings_light</item>
        <item name="menuIconEmail">@drawable/ic_menu_email_light</item>
        <item name="iconGoToToday">@drawable/ic_go_to_today_light</item>
