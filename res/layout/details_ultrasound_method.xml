<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ScrollViewStyle"
    tools:context=".DetailsActivity" >

    <LinearLayout style="@style/LinearLayoutVerticalStyle.Padding" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/button1" />

            <Button
                android:id="@id/button1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/button2"
                android:text="+" />

            <Button
                android:id="@id/button2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="-" />
        </RelativeLayout>

        <TextView
            style="@style/TextViewStyle"
            android:text="@string/ultrasoundDate" />

        <DatePicker
            android:id="@+id/datePickerUltrasoundDate"
            style="@style/DatePickerStyle" />

        <TextView
            style="@style/TextViewStyle"
            android:paddingTop="@dimen/view_padding"
            android:text="@string/diagnosedAge" />

        <LinearLayout style="@style/LinearLayoutHorizontalStyle" >

            <com.anna.sent.soft.numberpickerlibrary.NumberPicker
                android:id="@+id/numberPickerUltrasoundWeeks"
                style="@style/NumberPickerStyle" />

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:paddingRight="@dimen/view_padding"
                android:text="@string/weeks" />

            <com.anna.sent.soft.numberpickerlibrary.NumberPicker
                android:id="@+id/numberPickerUltrasoundDays"
                style="@style/NumberPickerStyle" />

            <TextView
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:text="@string/days" />
        </LinearLayout>

        <RadioGroup style="@style/RadioGroupStyle" >

            <RadioButton
                android:id="@+id/radioIsGestationalAge"
                style="@style/RadioButtonStyle.Checked"
                android:text="@string/isGestationalAge" />

            <RadioButton
                android:id="@+id/radioIsEmbryonicAge"
                style="@style/RadioButtonStyle"
                android:text="@string/isEmbryonicAge" />
        </RadioGroup>
    </LinearLayout>

</ScrollView>