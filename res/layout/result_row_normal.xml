<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="@dimen/small_padding" >

    <LinearLayout style="@style/LinearLayoutVerticalStyle" >

        <LinearLayout
            style="@style/LinearLayoutHorizontalStyle"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/textView"
                style="@style/TextViewStyle.Center.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="@string/emptyString" />

            <LinearLayout
                style="@style/LinearLayoutVerticalStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/result1"
                    style="@style/TextViewStyle.Center.Medium.Red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/emptyString" />

                <TextView
                    android:id="@+id/result2"
                    style="@style/TextViewStyle.Center.Medium.Blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/emptyString" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/message"
            style="@style/TextViewStyle"
            android:layout_height="wrap_content"
            android:text="@string/emptyString" />
    </LinearLayout>

</TableRow>