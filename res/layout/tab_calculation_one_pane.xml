<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayoutVerticalStyle" >

    <LinearLayout
        style="@style/LinearLayoutHorizontalStyle"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp" >

        <Button
            android:id="@+id/buttonCalculateEstimatedChildbirthDate"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/calculateEstimatedChildbirthDate"
            android:text="@string/childbirthDate" />

        <Button
            android:id="@+id/buttonCalculateEstimatedGestationalAge"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/calculateEstimatedGestationalAge"
            android:text="@string/gestationalAge" />
    </LinearLayout>

    <fragment
        android:id="@+id/titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.anna.sent.soft.childbirthdate.fragments.TitlesFragment" />

</LinearLayout>