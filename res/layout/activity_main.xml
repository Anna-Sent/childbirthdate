<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout style="@style/LinearLayoutVerticalStyle" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ScrollView
                android:id="@+id/tab1"
                style="@style/ScrollViewStyle" >

                <LinearLayout style="@style/LinearLayoutVerticalStyle" >

                    <!-- new line -->

                    <TextView
                        style="@style/TextViewStyle.LeftPadding"
                        android:text="@string/acceptDefaults" />

                    <!-- new line -->

                    <LinearLayout style="@style/LinearLayoutHorizontalStyle" >

                        <TextView
                            style="@style/SET_COL1"
                            android:text="@string/menstrualCycleLen" />

                        <com.anna.sent.soft.numberpickerlibrary.NumberPicker
                            android:id="@+id/editTextMenstrualCycleLen"
                            style="@style/NumberPickerStyle" />

                        <TextView
                            style="@style/SET_COL2"
                            android:text="@string/days" />
                    </LinearLayout>

                    <!-- new line -->

                    <LinearLayout style="@style/LinearLayoutHorizontalStyle" >

                        <TextView
                            style="@style/SET_COL1"
                            android:text="@string/lutealPhaseLen" />

                        <com.anna.sent.soft.numberpickerlibrary.NumberPicker
                            android:id="@+id/editTextLutealPhaseLen"
                            style="@style/NumberPickerStyle" />

                        <TextView
                            style="@style/SET_COL2"
                            android:text="@string/days" />
                    </LinearLayout>

                    <!-- new line -->

                    <LinearLayout style="@style/LinearLayoutHorizontalStyle" >

                        <RelativeLayout style="@style/ButtonSpace" />

                        <Button
                            style="@style/ButtonStyle.SmallText"
                            android:onClick="restoreDefaultValues"
                            android:text="@string/restoreDefaultValues" />

                        <RelativeLayout style="@style/ButtonSpace" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:id="@+id/tab2"
                style="@style/ScrollViewStyle" >

                <LinearLayout style="@style/LinearLayoutVerticalStyle" >

                    <!-- new line -->

                    <CheckBox
                        android:id="@+id/checkBox1"
                        style="@style/CheckBoxStyle"
                        android:text="@string/lastMenstruationDate" />

                    <!-- new line -->

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        style="@style/LinearLayoutHorizontalStyle" >

                        <DatePicker
                            android:id="@+id/datePickerLastMenstruationDate"
                            style="@style/DatePickerStyle" />
                    </LinearLayout>

                    <!-- new line -->

                    <CheckBox
                        android:id="@+id/checkBox2"
                        style="@style/CheckBoxStyle"
                        android:text="@string/ovulationDate" />

                    <!-- new line -->

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        style="@style/LinearLayoutHorizontalStyle" >

                        <DatePicker
                            android:id="@+id/datePickerOvulationDate"
                            style="@style/DatePickerStyle" />
                    </LinearLayout>

                    <!-- new line -->

                    <CheckBox
                        android:id="@+id/checkBox3"
                        style="@style/CheckBoxStyle"
                        android:text="@string/ultrasoundResults" />

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        style="@style/LinearLayoutVerticalStyle" >

                        <!-- new line -->

                        <TextView
                            style="@style/TextViewStyle.LeftPaddingDouble"
                            android:text="@string/ultrasoundDate" />

                        <!-- new line -->

                        <DatePicker
                            android:id="@+id/datePickerUltrasoundDate"
                            style="@style/DatePickerStyle" />

                        <!-- new line -->

                        <TextView
                            style="@style/TextViewStyle.LeftPaddingDouble"
                            android:text="@string/diagnosedAge" />

                        <!-- new line -->

                        <LinearLayout style="@style/LinearLayoutHorizontalStyle" >

                            <RelativeLayout style="@style/FixedSpace" />

                            <com.anna.sent.soft.numberpickerlibrary.NumberPicker
                                android:id="@+id/editTextWeeks"
                                style="@style/NumberPickerStyle" />

                            <TextView
                                style="@style/CAL_COL1"
                                android:text="@string/weeks" />

                            <com.anna.sent.soft.numberpickerlibrary.NumberPicker
                                android:id="@+id/editTextDays"
                                style="@style/NumberPickerStyle" />

                            <TextView
                                style="@style/CAL_COL2"
                                android:text="@string/days" />
                        </LinearLayout>

                        <!-- new line -->

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/shift" >

                            <RadioButton
                                android:id="@+id/radioIsGestationalAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:onClick="radioClick"
                                android:text="@string/isGestationalAge"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <RadioButton
                                android:id="@+id/radioIsEmbryonicAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="radioClick"
                                android:text="@string/isEmbryonicAge"
                                android:textAppearance="?android:attr/textAppearanceSmall" />
                        </RadioGroup>
                    </LinearLayout>

                    <!-- new line -->

                    <LinearLayout style="@style/LinearLayoutHorizontalStyle" >

                        <RelativeLayout style="@style/ButtonSpace" />

                        <Button
                            android:id="@+id/buttonCalculateEstimatedChildbirthDate"
                            style="@style/ButtonStyle.SmallText"
                            android:onClick="calculate"
                            android:text="@string/calculateEstimatedChildbirthDate" />

                        <RelativeLayout style="@style/ButtonSpace" />
                    </LinearLayout>

                    <!-- new line -->

                    <TextView style="@style/TextViewStyle" />

                    <!-- new line -->

                    <TextView style="@style/TextViewStyle" />

                    <!-- new line -->

                    <TextView
                        style="@style/TextViewStyle.LeftPadding.Medium"
                        android:text="@string/currentDate" />

                    <!-- new line -->

                    <DatePicker
                        android:id="@+id/datePickerCurrentDate"
                        style="@style/DatePickerStyle" />

                    <!-- new line -->

                    <LinearLayout style="@style/LinearLayoutHorizontalStyle" >

                        <RelativeLayout style="@style/ButtonSpace" />

                        <Button
                            android:id="@+id/buttonCalculateEstimatedGestationalAge"
                            style="@style/ButtonStyle.SmallText"
                            android:onClick="calculate"
                            android:text="@string/calculateEstimatedGestationalAge" />

                        <RelativeLayout style="@style/ButtonSpace" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:id="@+id/tab3"
                style="@style/ScrollViewStyle" >

                <TextView
                    android:id="@+id/textViewHelp"
                    style="@style/TextViewStyle.LeftPadding"
                    android:textIsSelectable="true" />
            </ScrollView>
        </FrameLayout>
    </LinearLayout>

</TabHost>