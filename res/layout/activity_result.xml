<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ScrollViewStyle"
    tools:context=".ResultActivity" >

    <LinearLayout
        style="@style/LinearLayoutVerticalStyle"
        android:padding="@dimen/small_padding" >

        <TextView
            style="@style/TextViewStyle.Medium"
            android:text="@string/currentDate" />

        <LinearLayout
            style="@style/LinearLayoutHorizontalStyle"
            android:gravity="center_vertical" >

            <DatePicker
                android:id="@+id/datePickerCurrentDate"
                style="@style/DatePickerStyle" />

            <Button
                android:id="@+id/buttonToday"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="?attr/helpIcon"
                android:hint="@string/today" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"
            android:stretchColumns="*" />

        <com.google.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/adUnitId"
            ads:loadAdOnCreate="true"
            android:gravity="center"
            android:paddingTop="@dimen/view_padding" />
    </LinearLayout>

</ScrollView>