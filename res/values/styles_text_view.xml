<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="TextViewStyle.Medium">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="TextViewStyle.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewStyle.Center.Large">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="TextViewStyle.Center.Medium">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="TextViewStyle.Center.Medium.Red">
        <item name="android:textColor">#ff0000</item>
    </style>

    <style name="TextViewStyle.Center.Medium.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>

</resources>