<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <declare-styleable name="Theme">
        <attr name="menuIconHelp" format="reference" />
        <attr name="menuIconSettings" format="reference" />
        <attr name="menuIconEmail" format="reference" />
        <attr name="iconGoToToday" format="reference" />
        <attr name="iconNextItem" format="reference" />
        <attr name="iconPrevItem" format="reference" />
        <attr name="iconExpand" format="reference" />
        <attr name="iconCollapse" format="reference" />
        <attr name="iconAdd" format="reference" />
        <attr name="iconDelete" format="reference" />
        <attr name="iconEdit" format="reference" />
    </declare-styleable>

    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <item name="menuIconHelp">@drawable/ic_menu_help_dark</item>
        <item name="menuIconSettings">@drawable/ic_menu_settings_dark</item>
        <item name="menuIconEmail">@drawable/ic_menu_email_dark</item>
        <item name="iconGoToToday">@drawable/ic_go_to_today_dark</item>
        <item name="iconNextItem">@drawable/ic_next_item_dark</item>
        <item name="iconPrevItem">@drawable/ic_previous_item_dark</item>
        <item name="iconExpand">@drawable/ic_expand_dark</item>
        <item name="iconCollapse">@drawable/ic_collapse_dark</item>
        <item name="iconAdd">@drawable/ic_new_dark</item>
        <item name="iconDelete">@drawable/ic_remove_content_dark</item>
        <item name="iconEdit">@drawable/ic_edit_dark</item>
    </style>

    <style name="AppBaseThemeLight" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="menuIconHelp">@drawable/ic_menu_help_dark</item>
        <item name="menuIconSettings">@drawable/ic_menu_settings_dark</item>
        <item name="menuIconEmail">@drawable/ic_menu_email_dark</item>
        <item name="iconGoToToday">@drawable/ic_go_to_today_light</item>
        <item name="iconNextItem">@drawable/ic_next_item_light</item>
        <item name="iconPrevItem">@drawable/ic_previous_item_light</item>
        <item name="iconExpand">@drawable/ic_expand_light</item>
        <item name="iconCollapse">@drawable/ic_collapse_light</item>
        <item name="iconAdd">@drawable/ic_new_light</item>
        <item name="iconDelete">@drawable/ic_remove_content_light</item>
        <item name="iconEdit">@drawable/ic_edit_light</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="AppThemeLight" parent="AppBaseThemeLight" />

    <style name="DialogBaseThemeLight" parent="android:Theme.Holo.Light.Dialog" />
</resources>
