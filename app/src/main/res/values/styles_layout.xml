<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="LinearLayoutVerticalStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayoutVerticalStyle.WithPadding">
        <item name="android:paddingBottom">@dimen/layout_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/layout_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/layout_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/layout_vertical_padding</item>
    </style>

    <style name="LinearLayoutHorizontalStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
