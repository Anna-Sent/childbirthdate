<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayoutHorizontalStyle"
    android:baselineAligned="false">

    <LinearLayout
        style="@style/LinearLayoutVerticalStyle"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <fragment
            android:id="@+id/titlesHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            class="com.anna.sent.soft.childbirthdate.fragments.TitlesHeaderFragment" />

        <fragment
            android:id="@+id/titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            class="com.anna.sent.soft.childbirthdate.fragments.TitlesFragment" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/details"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>