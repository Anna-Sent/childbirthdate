<?xml version="1.0" encoding="utf-8"?>
<com.anna.sent.soft.childbirthdate.ui.CheckableFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        style="@style/LinearLayoutHorizontalStyle"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:paddingLeft="@dimen/layout_horizontal_padding" >

        <CheckBox
            android:id="@+id/checkBox"
            style="@style/CheckBoxStyle"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:paddingRight="15dp" />

        <LinearLayout
            style="@style/LinearLayoutVerticalStyle"
            android:layout_gravity="center_vertical" >

            <TextView
                android:id="@+id/text1"
                style="@style/TextViewStyle.Medium"
                android:text="@string/emptyString" />

            <TextView
                android:id="@+id/text2"
                style="@style/TextViewStyle"
                android:text="@string/emptyString" />
        </LinearLayout>
    </LinearLayout>

</com.anna.sent.soft.childbirthdate.ui.CheckableFrameLayout>